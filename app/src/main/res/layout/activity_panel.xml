<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanelActivity">

    <TextView
        android:id="@+id/panelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:text="@string/panel_panel"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/findPeopleButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="243dp"
        android:text="@string/button_findPeople"
        app:layout_constraintEnd_toEndOf="@+id/chatsButton"
        app:layout_constraintStart_toStartOf="@+id/chatsButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chatsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_chats"
        app:layout_constraintEnd_toEndOf="@+id/changeInterestsButton"
        app:layout_constraintStart_toStartOf="@+id/changeInterestsButton"
        app:layout_constraintTop_toBottomOf="@+id/findPeopleButton" />

    <Button
        android:id="@+id/changeInterestsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_changeInterests"
        app:layout_constraintEnd_toEndOf="@+id/logoutButton"
        app:layout_constraintStart_toStartOf="@+id/logoutButton"
        app:layout_constraintTop_toBottomOf="@+id/chatsButton" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/button_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeInterestsButton" />


</androidx.constraintlayout.widget.ConstraintLayout>