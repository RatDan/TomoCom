<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/nav_profile" />

            <TextView
                android:id="@+id/profileNameTV"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_username"
                android:layout_below="@+id/profileImageView"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/profileDescriptionTV"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_description"
                android:layout_below="@+id/profileNameTV"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/profileInterestsTV"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_interests"
                android:layout_below="@+id/profileDescriptionTV" />

            <TextView
                android:id="@+id/profileAgeTV"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_age"
                android:layout_below="@+id/profileInterestsTV" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addFriendButton"
                android:layout_marginTop="10dp"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileAgeTV"
                android:layout_centerHorizontal="true"
                android:text="@string/button_addFriend" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/skipButton"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addFriendButton"
                android:layout_centerHorizontal="true"
                android:text="@string/button_skip" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>