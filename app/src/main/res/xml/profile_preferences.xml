<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/profile_title">

        <Preference
            app:title="@string/profile_change_picture"
            app:key="changeProfilePicture"
            app:icon="@drawable/profile_picture">
            <intent
                android:action="android.intent.action.VIEW"
                android:targetClass="com.danrat.tomocom.View.ProfilePictureActivity"
                android:targetPackage="com.danrat.tomocom"
                android:data="@string/button_save"
                />
        </Preference>

        <Preference
            app:title="@string/profile_change_interests"
            app:key="interests"
            app:icon="@drawable/profile_interests">
            <intent
                android:action="android.intent.action.VIEW"
                android:targetClass="com.danrat.tomocom.View.InterestSelectorActivity"
                android:targetPackage="com.danrat.tomocom"
                android:data="@string/button_save"
                />
        </Preference>

        <Preference
            app:title="@string/profile_change_description"
            app:key="description"
            app:icon="@drawable/profile_description">
            <intent
                android:action="android.intent.action.VIEW"
                android:targetClass="com.danrat.tomocom.View.DescriptionActivity"
                android:targetPackage="com.danrat.tomocom"
                android:data="@string/button_save"
                />
        </Preference>

        <Preference
            app:title="@string/profile_clear"
            app:key="clear"
            app:icon="@drawable/profile_clear"/>

        <Preference
            app:title="@string/profile_delete"
            app:key="delete"
            app:icon="@drawable/profile_delete"/>

    </PreferenceCategory>
</PreferenceScreen>