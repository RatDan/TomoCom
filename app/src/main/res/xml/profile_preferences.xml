<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/profile_title">

        <EditTextPreference
            app:key="username"
            app:title="@string/profile_username"
            app:defaultValue="User"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:title="@string/profile_change_picture"
            app:key="changeProfilePicture">
            <intent
                android:action="android.intent.action.VIEW"
                android:targetClass="com.danrat.tomocom.ProfilePictureActivity"
                android:targetPackage="com.danrat.tomocom"
                android:data="@string/button_save"
                />
        </Preference>

        <Preference
            app:title="@string/profile_change_interests"
            app:key="interests">
            <intent
                android:action="android.intent.action.VIEW"
                android:targetClass="com.danrat.tomocom.InterestSelectorActivity"
                android:targetPackage="com.danrat.tomocom"
                android:data="@string/button_save"
                />
        </Preference>

        <Preference
            app:title="@string/profile_change_description"
            app:key="description">
            <intent
                android:action="android.intent.action.VIEW"
                android:targetClass="com.danrat.tomocom.DescriptionActivity"
                android:targetPackage="com.danrat.tomocom"
                android:data="@string/button_save"
                />
        </Preference>

        <Preference
            app:title="@string/profile_delete"
            app:key="delete"
            app:icon="@drawable/settings_delete"/>

    </PreferenceCategory>
</PreferenceScreen>