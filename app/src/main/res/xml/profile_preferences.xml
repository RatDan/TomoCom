<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/profile_title">

        <Preference
            app:title="@string/profile_change_picture"
            app:key="changeProfilePicture"
            app:icon="@drawable/profile_picture">
        </Preference>

        <Preference
            app:title="@string/profile_change_interests"
            app:key="interests"
            app:icon="@drawable/profile_interests">
        </Preference>

        <Preference
            app:title="@string/profile_change_description"
            app:key="description"
            app:icon="@drawable/profile_description">
        </Preference>

        <Preference
            app:title="@string/profile_clear"
            app:key="clear"
            app:icon="@drawable/profile_clear"/>

        <Preference
            app:title="@string/profile_delete"
            app:key="delete"
            app:icon="@drawable/profile_delete"/>

    </PreferenceCategory>
</PreferenceScreen>