<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TomoComm"
        tools:ignore="DiscouragedApi, LockedOrientationActivity"
        tools:targetApi="31">
        <activity
            android:name=".View.AboutUsActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".View.DescriptionActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".View.ResetPasswordActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".View.ProfilePictureActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".View.HomeActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".View.ChatActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".View.InterestSelectorActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".View.LoginActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"
            android:noHistory="true"/>
        <activity
            android:name=".View.SignupActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait"
            android:noHistory="true"/>
        <activity
            android:name=".View.MainActivity"
            android:exported="true"
            android:theme="@style/SplashTheme"
            android:launchMode="singleTop"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>